<h1>Edit Info:</h1>
<form action="/Cities/Details/@(Model.CityId)" method="post">
    <label for="name">Cities's Name</label>
    <input id="name" name="name" type="text" value="@(Model.Name)">
    <label for="rating">Cities Rating</label>
    <input id="rating" name="rating" type="number" value="@(Model.Rating)">
    <label for="attraction">Attraction</label>
    <input id="attraction" name="attraction" type="text" value="@(Model.Attraction)">
    <label for="review">City's Review</label>
    <input id="review" name="review" type="text" value="@(Model.Review)">
    <button type="submit">Go!</button>
</form>

<a href="/Cities/Details/@(Model.CityId)"><p>Return to Details</p></a>